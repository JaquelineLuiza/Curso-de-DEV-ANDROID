<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E9B9"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="413dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@mipmap/logo" />

    <ImageView
        android:id="@+id/imageViewLeao"
        android:layout_width="109dp"
        android:layout_height="99dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCao"
        app:layout_constraintVertical_bias="0.185"
        app:srcCompat="@mipmap/leao" />

    <ImageView
        android:id="@+id/imageViewCao"
        android:layout_width="109dp"
        android:layout_height="99dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.229"
        app:srcCompat="@mipmap/cao" />

    <ImageView
        android:id="@+id/imageViewOvelha"
        android:layout_width="109dp"
        android:layout_height="99dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLeao"
        app:layout_constraintVertical_bias="0.225"
        app:srcCompat="@mipmap/ovelha" />

    <ImageView
        android:id="@+id/imageViewMacaco"
        android:layout_width="109dp"
        android:layout_height="99dp"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toEndOf="@+id/imageViewLeao"
        app:layout_constraintTop_toBottomOf="@+id/imageViewGato"
        app:layout_constraintVertical_bias="0.016"
        app:srcCompat="@mipmap/macaco" />

    <ImageView
        android:id="@+id/imageViewGato"
        android:layout_width="109dp"
        android:layout_height="99dp"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="92dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewCao"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.229"
        app:srcCompat="@mipmap/gato" />

    <ImageView
        android:id="@+id/imageViewVaca"
        android:layout_width="109dp"
        android:layout_height="99dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toEndOf="@+id/imageViewOvelha"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMacaco"
        app:layout_constraintVertical_bias="0.175"
        app:srcCompat="@mipmap/vaca" />
</androidx.constraintlayout.widget.ConstraintLayout>